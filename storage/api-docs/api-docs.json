        "/api/v1/users/search": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Search User",
                "description": "Search user with email, phone",
                "operationId": "SearchUser",
                "requestBody": {
                    "description": "Search User",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "test@test.com"
                                    },
                                    "phone": {
                                        "type": "string",
